{deps, [
    {grpc, {git, "https://github.com/Bluehouse-Technology/grpc", {tag, "v0.2.0"}}}
]}.

{plugins, [
    {rebar3_gpb_plugin, "2.23.6"}
]}.

{provider_hooks, [
    {pre, [{compile, {protobuf, compile}}]}
]}.

{shell, [{apps, [aoc_server, grpc]}]}.

{gpb_opts, [
    {module_name_suffix, "_pb"},
    {paths, ["priv"]},
    {include_dirs, ["priv"]},
    {descriptor, true},
    {grpc, true}
]}.

{erl_opts, [debug_info, {i, "./_build/default/plugins/gpb/include"}]}.
